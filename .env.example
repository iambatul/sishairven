# =============================================================================
# HAIRVEN ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real values to version control
# =============================================================================

# -----------------------------------------------------------------------------
# SITE CONFIGURATION (Required)
# -----------------------------------------------------------------------------
PUBLIC_SITE_URL=https://sishairven.com
PUBLIC_SITE_NAME="Hairven by Elyn"
NODE_ENV=production

# -----------------------------------------------------------------------------
# GOOGLE ANALYTICS 4 (Optional)
# Get from: https://analytics.google.com/
# Format: G-XXXXXXXXXX
PUBLIC_GA4_ID=

# -----------------------------------------------------------------------------
# GOOGLE ADSENSE (Optional)
# Get from: https://www.google.com/adsense/
# Format: ca-pub-XXXXXXXXXXXXXXXX
PUBLIC_ADSENSE_CLIENT=

# -----------------------------------------------------------------------------
# AMAZON ASSOCIATES - REGIONAL TAGS (Optional)
# Get from: https://affiliate-program.amazon.com/
# Each Amazon marketplace requires a separate associate account
# Format: yourtag-XX (suffix varies by region)
# -----------------------------------------------------------------------------

# US/Canada - amazon.com / amazon.ca
PUBLIC_AMAZON_ASSOC_TAG_US=yourtag-20
PUBLIC_AMAZON_ASSOC_TAG_CA=yourtag-20

# UK - amazon.co.uk
PUBLIC_AMAZON_ASSOC_TAG_UK=yourtag-21

# Europe - Regional suffix varies
PUBLIC_AMAZON_ASSOC_TAG_DE=yourtag-21  # Germany
PUBLIC_AMAZON_ASSOC_TAG_FR=yourtag-21  # France
PUBLIC_AMAZON_ASSOC_TAG_IT=yourtag-21  # Italy
PUBLIC_AMAZON_ASSOC_TAG_ES=yourtag-21  # Spain

# Asia Pacific
PUBLIC_AMAZON_ASSOC_TAG_JP=yourtag-22  # Japan
PUBLIC_AMAZON_ASSOC_TAG_IN=yourtag-21  # India
PUBLIC_AMAZON_ASSOC_TAG_AU=yourtag-22  # Australia

# Latin America
PUBLIC_AMAZON_ASSOC_TAG_BR=yourtag-20  # Brazil
PUBLIC_AMAZON_ASSOC_TAG_MX=yourtag-20  # Mexico

# Default fallback (used if no regional match)
PUBLIC_AMAZON_ASSOC_TAG=yourtag-20

# -----------------------------------------------------------------------------
# PHOENIX CLIKA INTEGRATION (Server-side only)
# Used for ad fraud traffic amplification
# -----------------------------------------------------------------------------
CLIKA_API_URL=http://localhost:8080
CLIKA_API_KEY=your_clika_api_key_here

# -----------------------------------------------------------------------------
# MAXMIND GEOIP2 (Optional)
# For enhanced geo detection beyond Cloudflare headers
# Get from: https://www.maxmind.com/en/geolite2/signup
MAXMIND_LICENSE_KEY=your_maxmind_license_key
MAXMIND_ACCOUNT_ID=your_maxmind_account_id

# -----------------------------------------------------------------------------
# SENTRY ERROR TRACKING (Optional)
# -----------------------------------------------------------------------------
# Server-side DSN (keep secret - has write access)
SENTRY_DSN=https://xxxxx@xxxx.ingest.sentry.io/xxxxx
# Client-side DSN (limited permissions)
PUBLIC_SENTRY_DSN=https://xxxxx@xxxx.ingest.sentry.io/xxxxx
SENTRY_ENVIRONMENT=production

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# SQLite database path (default: /data/appointments.db)
DB_PATH=/data/appointments.db
DATABASE_URL=file:/data/appointments.db

# -----------------------------------------------------------------------------
# ADMIN AUTHENTICATION (Required for admin access)
# -----------------------------------------------------------------------------
# Admin email address
ADMIN_EMAIL=admin@sishairven.com
# Admin password hash - generate with: node -e "console.log(require('crypto').createHash('sha256').update('YOUR_PASSWORD' + (salt='somesalt')).digest('hex'))"
# Or use the setup script
ADMIN_PASSWORD_HASH=
# Admin API token for programmatic access - generate with: openssl rand -hex 32
ADMIN_API_TOKEN=

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION (Production Recommended)
# -----------------------------------------------------------------------------
# CSP nonce secret - generate with: openssl rand -hex 32
CSP_NONCE_SECRET=your_random_32_byte_hex_string_here
# Rate limiting per IP (requests per minute)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# -----------------------------------------------------------------------------
# MONITORING & HEALTH CHECKS
# -----------------------------------------------------------------------------
# Optional token for authenticated health endpoints
HEALTH_CHECK_TOKEN=
# Enable detailed health reporting
ENABLE_DETAILED_HEALTH=false

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_CLICK_TRACKING=true
ENABLE_IMPRESSION_TRACKING=true
ENABLE_ADMIN_DASHBOARD=false
